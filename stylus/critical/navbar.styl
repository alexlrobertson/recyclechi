.navbar
  position fixed
  z-index 1030
  left     0
  right    0
  top      0

  min-height    50px
  margin-bottom 20px
  border        1px solid transparent

  background $color-700

.navbar-brand
  float       left
  font-size   1.5em
  color       #fff
  padding     15px
  line-height 20px

body
  padding-top 50px

.navbar-menu
  float       right
  padding     15px
  margin      0
  line-height 20px
  list-style  none

  .menu-item
    display inline-block
    margin 0 5px

  .menu-link
    color #fff
